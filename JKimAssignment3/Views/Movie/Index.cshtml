@model IEnumerable<JKimAssignment3.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>All Movies</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Title
                @*@Html.DisplayNameFor(model => model.Title)*@
            </th>
            <th>
                IMDb Link
                @*@Html.DisplayNameFor(model => model.ImdbLink)*@
            </th>
            <th>
                Genre
                @*@Html.DisplayNameFor(model => model.Genre)*@
            </th>
            <th>
                Release Year
                @*@Html.DisplayNameFor(model => model.Year)*@
            </th>
            <th>
                Movie Poster
                @*@Html.DisplayNameFor(model => model.MovieImage)*@
                    </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImdbLink)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @if (item.MovieImage != null)
                    {
                               <img width="100" height="100" style="border-radius: 50%" src="@Url.Action("GetMovieImage", "Movie", new {item.Id})" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
