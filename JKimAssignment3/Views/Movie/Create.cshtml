@model JKimAssignment3.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<body id="movieCreateIndex">
    <div class="container-fluid" id="centeredTopText">
        <h1>Add a Movie to the Film Library</h1>
        <p><i>Remember... only enter a Wes Anderson movie</i></p>
    </div>
    <hr />
        <div class="container-fluid">
            <div class="row">
                <div class="col-2"></div>
                <div class="col-4">
                    <img src="https://screenmusings.org/movie/blu-ray/The-Grand-Budapest-Hotel/images/The-Grand-Budapest-Hotel-042.jpg" width="100%" />
                </div>
                <div class="col-4">
                    <img src="https://screenmusings.org/movie/blu-ray/The-Grand-Budapest-Hotel/images/The-Grand-Budapest-Hotel-046.jpg" width="100%" />
                </div>
                <div class="col-2"></div>
            </div>
        </div>
        <br />
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label">Title</label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImdbLink" class="control-label">IMDb Link</label>
                    <input asp-for="ImdbLink" class="form-control" />
                    <span asp-validation-for="ImdbLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Genre" class="control-label">Genre</label>
                    <input asp-for="Genre" class="form-control" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year" class="control-label">Release Year</label>
                    <input asp-for="Year" class="form-control" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MovieImage" class="control-label">Poster</label>
                    <input type="file" id="MovieImage" name="MovieImage" multiple class="form-control" />
                    <span asp-validation-for="MovieImage" class="text-danger"></span>
                </div>
                <br />
                <div id="centeredItem">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-dark btn-width" />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
    <br />
    <div id="centeredItem">
        <h3><i>
            <a asp-action="Index">Back to List</a>
        </i></h3>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
