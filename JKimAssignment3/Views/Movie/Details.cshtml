@model JKimAssignment3.Models.MovieDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details - Let's Take a Gander...</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
            @*@Html.DisplayNameFor(model => model.Movie.Title)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            IMDb Link
            @*@Html.DisplayNameFor(model => model.Movie.ImdbLink)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.ImdbLink)
        </dd>
        <dt class="col-sm-2">
            Genre
            @*@Html.DisplayNameFor(model => model.Movie.Genre)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Genre)
        </dd>
        <dt class="col-sm-2">
            Release Year
            @*@Html.DisplayNameFor(model => model.Movie.Year)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Year)
        </dd>
        <dt class="col-sm-2">
            Poster
            @*@Html.DisplayNameFor(model => model.Movie.MovieImage)*@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.MovieImage)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Movie.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

<div>
    Average Tweet Sentiment:
    @if (Model.OverallAverageSentiment() != 0)
    {
        <span>@string.Format("{0:n2}", Math.Abs(Model.OverallAverageSentiment()) * 100)%</span>
    }

    @if (Model.OverallAverageSentiment() > 0)
    {
        <span>Positive</span>
    }
    else if (Model.OverallAverageSentiment() < 0)
    {
        <span>Negative</span>
    }
    else
    {
        <span>Neutral</span>
    }
</div>

<table class="table">
    <thead>
        <tr>
            <th>Tweet</th>
            <th>Sentiment</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tweet in Model.Tweets)
        {
            <tr>
                <td>@tweet.Tweet</td>
                <td>@tweet.Sentiment</td>
            </tr>
        }
    </tbody>
</table>
