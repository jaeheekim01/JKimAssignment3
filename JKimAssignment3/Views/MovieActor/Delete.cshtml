@model JKimAssignment3.Models.MovieActor

@{
    ViewData["Title"] = "Delete";
}
<body id="movieActorCreateIndex">
    <div class="container-fluid" id="centeredTopText">
        <h1>Delete a Movie & Actor Pairing from the Film Library</h1>
        <h3>Are you sure you want to delete this combination?</h3>
        <p><i>Maybe you ended up not liking the person in the film?</i></p>
    </div>
    <div>
        <hr />
        <div class="container-fluid" id="centeredItem">
            <dl class="row">
                <dt class="col-sm-6" id="leftAlign">
                    @Html.DisplayNameFor(model => model.Actor)
                </dt>
                <dt class="col-sm-6">
                    @Html.DisplayFor(model => model.Actor.Name)
                </dd>
                <dt class="col-sm-6" id="leftAlign">
                    @Html.DisplayNameFor(model => model.Movie)
                </dt>
                <dt class="col-sm-6">
                    @Html.DisplayFor(model => model.Movie.Title)
                </dd>
            </dl>        
        </div>
        <br />
        <div class="container-fluid" id="centeredItem">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-dark btn-width" />
                <a asp-action="Index" class="btn btn-dark btn-width">Back to List</a>
            </form>
        </div>
    </div>
</body>
