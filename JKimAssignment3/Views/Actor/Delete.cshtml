@model JKimAssignment3.Models.Actor

@{
    ViewData["Title"] = "Delete";
}

<body id="actorCreateIndex">
    <div class="container-fluid" id="centeredTopText">
        <h1>Delete an Actor from the Film Library</h1>
        <h3>Are you sure you want to delete this actor?</h3>
        <p><i>Maybe they got cancelled?</i></p>
    </div>
    <div>
        <hr />
        <div class="container-fluid" id="centeredItem">
            <dl class="row">
                <dt class="col-sm-6" id="leftAlign">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                </dt>
                <dd class="col-sm-6" id="rightAlign">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-6" id="leftAlign">
                    @Html.DisplayNameFor(model => model.Gender)
                </dt>
                <dd class="col-sm-6" id="rightAlign">
                    @Html.DisplayFor(model => model.Gender)
                </dd>
                <dt class="col-sm-6" id="leftAlign">
                    @Html.DisplayNameFor(model => model.Age)
                </dt>
                <dd class="col-sm-6" id="rightAlign">
                    @Html.DisplayFor(model => model.Age)
                </dd>
                <dt class="col-sm-6" id="leftAlign">
                    IMDb Link
                    @*@Html.DisplayNameFor(model => model.ImdbLink)*@
                </dt>
                <dd class="col-sm-6" id="rightAlign">
                    @Html.DisplayFor(model => model.ImdbLink)
                </dd>
                <dt class="col-sm-6" id="leftAlign">
                    Actor Image
                    @*@Html.DisplayNameFor(model => model.ActorImage)*@
                </dt>
                <dd class="col-sm-6" id="rightAlign">
                    @if (Model.ActorImage != null)
                    {
                        <img width="150" height="175" src="@Url.Action("GetActorImage", "Actor", new {Model.Id})" />
                    }
                </dd>
            </dl>
        </div>
        <br />
        <div class="container-fluid" id="centeredItem">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger btn-width" />
                <a asp-action="Index" class="btn btn-dark btn-width">Back to List</a>
            </form>
        </div>

    </div>
</body>
