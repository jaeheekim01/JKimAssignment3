@model JKimAssignment3.Models.ActorDetailsVM

@{
    ViewData["Title"] = "Details";
}

<body id="actorDetailsIndex">
    <div class="container-fluid" id="centeredTopText">
        <h1>Let's Take a Gander</h1>
        <p><i>Who is this person in a Wes Anderson film?</i></p>        
    </div>
    <hr />
    <div class="container-fluid">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <img src="https://screenmusings.org/movie/blu-ray/The-Grand-Budapest-Hotel/images/The-Grand-Budapest-Hotel-015.jpg" width="100%" />
            </div>
            <div class="col-3"></div>
        </div>
    </div>
    <br />
    <div class="container-fluid" id="centeredItem">
        <dl class="row">
            <dt class="col-sm-6" id="leftAlign">
                Name
                @*@Html.DisplayNameFor(model => model.Actor.Name)*@
            </dt>
            <dd class="col-sm-6" id="rightAlign">
                @Html.DisplayFor(model => model.Actor.Name)
            </dd>
            <dt class="col-sm-6" id="leftAlign">
                Gender
                @*@Html.DisplayNameFor(model => model.Actor.Gender)*@
            </dt>
            <dd class="col-sm-6" id="rightAlign">
                @Html.DisplayFor(model => model.Actor.Gender)
            </dd>
            <dt class="col-sm-6" id="leftAlign">
                Age
                @*@Html.DisplayNameFor(model => model.Actor.Age)*@
            </dt>
            <dd class="col-sm-6" id="rightAlign">
                @Html.DisplayFor(model => model.Actor.Age)
            </dd>
            <dt class="col-sm-6" id="leftAlign">
                IMDb Link
                @*@Html.DisplayNameFor(model => model.Actor.ImdbLink)*@
            </dt>
            <dd class="col-sm-6" id="rightAlign">
                @Html.DisplayFor(model => model.Actor.ImdbLink)
            </dd>
            <dt class="col-sm-6" id="leftAlign">
                Image
                @*@Html.DisplayNameFor(model => model.Actor.ActorImage)*@
            </dt>
            <dd class="col-sm-6" id="rightAlign">
                @if (Model.Actor.ActorImage != null)
                {
                    <img width="150" height="175" src="@Url.Action("GetActorImage", "Actor", new {Model.Actor.Id})" />
                }
            </dd>
        </dl>
    </div>
    <br />
    <div class="container-fluid" id="centeredItem">
        <div class="row">
            <div class="col-sm-1"></div>
            <div class="col-sm-3">
                 <a asp-action="Edit" asp-route-id="@Model?.Actor.Id" class="btn btn-dark btn-width">Edit</a>
            </div>
            <div class=col-sm-2></div>
            <div class="col-sm-3">
                <a asp-action="Index" class="btn btn-dark btn-width">Back to List</a>
            </div>
            <div class="col-sm-3"></div>
        </div>
    </div>
    <br />
    <div class="container-fluid" id="centeredItem">
        <h3><i>
                Average Tweet Sentiment:
                @if (Model.OverallAverageSentiment() != 0)
                {
                    <span>@Model.OverallAverageSentiment()</span>
                }

                @if (Model.OverallAverageSentiment() > 0)
                {
                    <span>Positive</span>
                }
                else if (Model.OverallAverageSentiment() < 0)
                {
                    <span>Negative</span>
                }
        </i></h3>
     </div>

    <table id="myTable" class="table">
        <thead>
            <tr>
                <th>Tweet</th>
                <th>Sentiment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tweet in Model.Tweets)
            {
                <tr>
                    <td>@tweet.Tweet</td>
                    <td>@tweet.Sentiment</td>
                </tr>
            }
        </tbody>
    </table>
</body>
