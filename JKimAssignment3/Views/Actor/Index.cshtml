@model IEnumerable<JKimAssignment3.Models.Actor>

@{
    ViewData["Title"] = "Index";
}

<h1>All Actors</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
                @*@Html.DisplayNameFor(model => model.Name)*@
            </th>
            <th>
                Gender
                @*@Html.DisplayNameFor(model => model.Gender)*@
            </th>
            <th>
                Age
                @*@Html.DisplayNameFor(model => model.Age)*@
            </th>
            <th>
                IMDb Link
                @*@Html.DisplayNameFor(model => model.ImdbLink)*@
            </th>
            <th>
                Actor Photo
                @*@Html.DisplayNameFor(model => model.ActorImage)*@
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ImdbLink)
                </td>
                <td>
                    @if (item.ActorImage != null)
                    {
                        <img width="100" height="100" style="border-radius: 50%" src="@Url.Action("GetActorImage", "Actor", new {item.Id})" />
                    }
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>